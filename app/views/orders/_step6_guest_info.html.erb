<div id="guest-info-section" class="step-card" style="display: none;">
  <h2 class="step-title mb-3">6. ご連絡先の入力</h2>

  <%= f.fields_for :guest do |g| %>
    <div class="mb-3">
      <%= g.label :name, "お名前", class: "form-label" %>
      <%= g.text_field :name, required: true, class: "form-control form-control-lg" %>
    </div>
    <div class="mb-3">
      <%= g.label :phone_number, "電話番号", class: "form-label" %>
      <%= g.telephone_field :phone_number, required: true, class: "form-control form-control-lg" %>
    </div>
    <div class="mb-3">
      <%= g.label :email, "メールアドレス（任意）", class: "form-label" %>
      <%= g.email_field :email, class: "form-control form-control-lg" %>
    </div>
  <% end %>

  <div id="delivery-fields" style="display: none;">
    <div class="mb-3">
      <%= f.label :delivery_address, "配達先住所", class: "form-label" %>
      <%= f.text_field :delivery_address, id: "order_delivery_address", class: "form-control form-control-lg" %>
    </div>
    <div class="mb-3">
      <%= f.label :delivery_name, "配達先のお名前", class: "form-label" %>
      <%= f.text_field :delivery_name, id: "order_delivery_name", class: "form-control form-control-lg" %>
    </div>
  </div>
</div>