<div id="flower-types-section" class="order-confirm-card mb-3" style="display: block;">
  <h2 class="step-title mb-3">1. メニューの選択</h2>
  <div id="flower-types" class="d-flex flex-wrap justify-content-center gap-3">
    <% @flower_types.each do |type| %>
      <label class="flower-type-label card p-2 text-center shadow-sm" style="min-width:120px; max-width:160px; border-radius:1.2rem; cursor:pointer; border: 1.5px solid #e0e0e0; background: #fff;">
        <%= f.radio_button :flower_type_id, type.id, id: "flower_type_#{type.id}", style: "display: none;" %>
        <div class="flower-type-card" data-flower-type-id="<%= type.id %>">
          <% if type.image.attached? %>
            <%= image_tag type.image.variant(resize_to_limit: [140, 140]), alt: type.name, class: "rounded mb-2" %>
          <% end %>
          <p class="mb-0" style="font-weight:600; font-size:1.1rem; color:#2d2d2d;"> <%= type.name %> </p>
        </div>
      </label>
    <% end %>
  </div>
</div>